<Page x:Class="Madera_MMB.View_Crtl.ParametresPlan"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
	Title="ParametresPlan">

    <Page.Resources>

        <Style TargetType="{x:Type GridViewColumnHeader}">
            <!-- Header List style -->
            <Setter Property="HorizontalContentAlignment" Value="Left" />
        </Style>

        <!-- Image Logo -->
        <BitmapImage x:Key="Logo" UriSource="../Lib/logo_madera.png"/>

        <Style TargetType="{x:Type Label}">
            <Setter Property="FontSize" Value="12" />
        </Style>

        <Style TargetType="{x:Type Button}">
            <!-- Bouton style -->
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border x:Name="bdr" BorderBrush="Black" BorderThickness="1 2 2 1" CornerRadius="2" Margin="3" Background="LightGray">
                            <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center" ContentSource="Content" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bdr" Property="Background" Value="YellowGreen" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Page.Resources>


    <Grid x:Name="MainGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="0.25*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="0.25*" />
        </Grid.RowDefinitions>

        <Border Grid.Row="2" BorderBrush="Black" BorderThickness="2" Margin="-15,0,-15,0"/>

        <Grid x:Name="ImgContainer"  Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.30*" />
                <ColumnDefinition Width="0.50*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Image Name="Logo" Grid.Column="0" Source="{DynamicResource Logo}" Grid.Row="0" Width="Auto" RenderTransformOrigin="0.706,0.609" Margin="10,10,10,10"/>
            <Viewbox Grid.Column="1" HorizontalAlignment="Left" Height="40" VerticalAlignment="Center" Width="Auto" Margin="10,10,10,10">
                <Label Content="Paramètres du plan : " FontWeight="ExtraBold" FontSize="10"/>
            </Viewbox>
        </Grid>

        <Grid Grid.Row="2" Grid.Column="0" >
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.25*"/>
                <ColumnDefinition Width="0.25*"/>
                <ColumnDefinition Width="0.25*"/>
                <ColumnDefinition Width="0.25*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border  BorderBrush="Black" BorderThickness="2" Grid.Column="0" Grid.RowSpan="2" Margin="-5,0,0,0"/>


            <Button x:Name="BtnConfirmerParamPlan"
                    HorizontalAlignment="Stretch" 
                    Grid.Row="0" 
                    VerticalAlignment="Stretch" 
                    Margin="10,10,10,10" 
                    Content="Confirmer"
                    Click="BtnConfirmerParamPlan_Click"/>
            <Button x:Name="BtnRetour" 
                    Content="Retour"
                    HorizontalAlignment="Stretch" 
                    Grid.Row="1" 
                    VerticalAlignment="Stretch" 
                    Margin="10,10,10,10"
                    Click="BtnRetour_Click"/>

            <Viewbox  Grid.Row="0" Grid.Column="1"  Width="Auto" Height="Auto" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Label Content=" Nom du client : " FontWeight="Bold" FontSize="5"/>
            </Viewbox>

            <Viewbox  Grid.Row="1" Grid.Column="1"  Width="Auto" Height="Auto" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Label Content=" Statut actuel : " FontWeight="Bold" FontSize="5"/>
            </Viewbox>

            <Viewbox Grid.Row="0" Grid.Column="3"  Width="Auto" Height="Auto" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Label  Content=" Date de création : " FontWeight="Bold" FontSize="5"/>
            </Viewbox>

            <Viewbox Grid.Row="1" Grid.Column="3"  Width="Auto" Height="Auto" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Label Content=" Nom du Commercial : " FontWeight="Bold" FontSize="5"/>
            </Viewbox>

        </Grid>

        <!-- Début Déclaration Vue-->
        <Grid x:Name="Params" Grid.Column="1" Grid.Row="0" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Grid.RowSpan="2" Grid.ColumnSpan="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="0.30*"/>
                <RowDefinition Height="0.30*"/>
                <RowDefinition Height="0.30*"/>
                <RowDefinition Height="0.30*"/>
                <RowDefinition Height="0.30*"/>
                <RowDefinition Height="0.30*"/>
                <RowDefinition Height="0.30*"/>
                <RowDefinition Height="0.30*"/>
                <RowDefinition Height="0.30*"/>
                <RowDefinition Height="0.30*"/>
                <RowDefinition Height="0.30*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.25*"/>
                <ColumnDefinition Width="0.30*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Viewbox Margin="15,0,0,0" Grid.Row="2" HorizontalAlignment="Left" VerticalAlignment="Center">
                <Label  Content="* Nom du plan : " FontWeight="Bold" FontSize="5" />
            </Viewbox>

            <Viewbox Margin="15,0,0,0" Grid.Row="3" HorizontalAlignment="Left" VerticalAlignment="Center">
                <Label  Content="* Coupe de principe : " FontWeight="Bold" FontSize="5" />
            </Viewbox>

            <Viewbox Margin="15,0,0,0" Grid.Row="4" HorizontalAlignment="Left" VerticalAlignment="Center">
                <Label  Content="* Type de couverture : " FontWeight="Bold" FontSize="5" />
            </Viewbox>

            <Viewbox Margin="15,0,0,0" Grid.Row="5" HorizontalAlignment="Left" VerticalAlignment="Center">
                <Label  Content="* Type de plancher  : " FontWeight="Bold" FontSize="5" />
            </Viewbox>

            <Viewbox Margin="15,0,0,0" Grid.Row="6" HorizontalAlignment="Left" VerticalAlignment="Center">
                <Label  Content="* Choix d'une gamme  : " FontWeight="Bold" FontSize="5" />
            </Viewbox>

            <Viewbox Grid.Row="10" HorizontalAlignment="Left" VerticalAlignment="Bottom">
                <Label Content="* Champs obligatoires " FontWeight="Bold" FontSize="4"/>
            </Viewbox>


            <TextBox Text="Plan 5 Base Carré " Height="30" HorizontalAlignment="Stretch" Grid.Column="1" Grid.Row="2"  TextWrapping="WrapWithOverflow" VerticalAlignment="Center" Width="200"/>

            <ToggleButton x:Name="BoutonChoixCoupe" HorizontalAlignment="Stretch" Grid.Column="1" Grid.Row="3" Content=" Choisir une coupe " Height="30"   VerticalAlignment="Center" Click="cp_Button_Click" />
            <ToggleButton x:Name="BoutonChoixCouverture" Content=" Choisir une couverture " Height="30" HorizontalAlignment="Stretch" Grid.Column="1" Grid.Row="4"   VerticalAlignment="Center"  Click="couv_Button_Click"/>
            <ToggleButton x:Name="BoutonChoixPlancher" Content=" Choisir un plancher " Height="30" HorizontalAlignment="Stretch" Grid.Column="1" Grid.Row="5"   VerticalAlignment="Center" Click="planc_Button_Click" />
            <ToggleButton x:Name="BoutonChoixGamme" Content=" Choisir une gamme " Height="30" HorizontalAlignment="Stretch" Grid.Column="1" Grid.Row="6"   VerticalAlignment="Center" Click="gamme_Button_Click" />

            <GroupBox x:Name="forme" Visibility="Hidden" Header="Sélection d'une forme"  Grid.Column="2" Grid.Row="0" Grid.RowSpan="5"
                      Height="Auto"
                      Margin="25,0,25,0">
                <WrapPanel x:Name="wrapformes"/>
            </GroupBox>

            <GroupBox Grid.Column="2" Grid.Row="5" Grid.RowSpan="5"
                    Margin="25,0,25,0" x:Name="taille" Visibility="Hidden" Header="Sélection d'une taille" >
                <StackPanel Height="Auto">
                    <WrapPanel x:Name="wraptailles"/>
                    <ScrollBar Height="Auto" HorizontalAlignment="Right"/>
                </StackPanel>
            </GroupBox>

            <GroupBox x:Name="couv" Visibility="Hidden" Header="Sélection d'une couverture"  Grid.Column="2" Grid.Row="1" Grid.RowSpan="5"
                      Height="Auto"
                      Margin="25,0,25,0">
                <StackPanel  Width="Auto">
                    <WrapPanel x:Name="wrapcouv"/>
                    <ScrollBar Height="Auto" HorizontalAlignment="Right"/>
                </StackPanel>
            </GroupBox>

            <GroupBox x:Name="planch" Visibility="Hidden" Header="Sélection d'un plancher"  Grid.Column="2" Grid.Row="1" Grid.RowSpan="5"
                      Height="Auto"
                      Margin="25,0,25,0">
                <StackPanel  Width="Auto">
                    <WrapPanel x:Name="wrapplanch"/>
                    <ScrollBar Height="Auto" HorizontalAlignment="Right"/>
                </StackPanel>
            </GroupBox>

            <GroupBox x:Name="gam" Visibility="Hidden" Header="Sélection d'une gamme"  Grid.Column="2" Grid.Row="1" Grid.RowSpan="5"
                      Height="Auto"
                      Margin="25,0,25,0">
                <StackPanel Width="Auto">
                    <WrapPanel x:Name="wrapgamme"/>
                    <ScrollBar Height="Auto" HorizontalAlignment="Right"/>
                </StackPanel>
            </GroupBox>
        </Grid>
        <!-- Fin Déclaration Vue -->

    </Grid>
    <!-- Fin Déclaration Template -->
</Page>